@inherits LayoutComponentBase

<div class="d-flex flex-column min-vh-100">
    <header class="">
        <div class="container-fluid" style="background: linear-gradient(black, red);">
            <div class="d-flex justify-content-between align-items-center py-2">
                <div class="d-flex align-items-center">
                    <NavMenu />
                </div>
                <div class="top-row px-4 d-flex align-items-center" style="background-color: transparent;">
                    <AuthorizeView>
                        <NotAuthorized>
                            <a href="/login" class="btn btn-primary me-2">Bejelentkezés</a>
                            <a href="/registration" class="btn btn-primary">Regisztráció</a>
                        </NotAuthorized>
                        <Authorized>
                    <a href="@($"profile?Username={@context.User.Identity.Name}")" class="btn btn-primary">Profil</a>
                    <a href="/logout" class="btn btn-primary">Kijelentkezés</a>
                        </Authorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </header>

    <div class="d-flex flex-row flex-grow-1 container-fluid" style="background: radial-gradient(purple,red);">
        <main class="flex-grow-1">
            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>

    <footer class="modal-footer d-flex justify-content-center align-items-center bg-danger bg-opacity-75">
        <span>&copy; @DateTime.Now.Year Dave&Kore. All rights reserved.</span>
    </footer>
</div>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
