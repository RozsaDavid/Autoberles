@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <NotAuthorized>
                    <a href="/login" class="btn btn-primary">Bejelentkezés</a>
                    <a href="/registration" class="btn btn-primary">Regisztráció</a>
                </NotAuthorized>
                <Authorized>
                    <a href="@($"profile?Username={@context.User.Identity.Name}")" class="btn btn-primary">Profil</a>
                    <a href="/logout" class="btn btn-primary">Kijelentkezés</a>
                </Authorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
